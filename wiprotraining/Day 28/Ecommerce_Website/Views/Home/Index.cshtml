@model List<Ecommerce_Website.Models.Product>

<h2 class="my-4 text-center">Our Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text fw-bold">Rs. @product.Price</p>
                    <a href="/Cart/Add/@product.Id" class="btn btn-primary mt-auto">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="/Cart/Index" class="btn btn-success mt-3">Go to Cart</a>
