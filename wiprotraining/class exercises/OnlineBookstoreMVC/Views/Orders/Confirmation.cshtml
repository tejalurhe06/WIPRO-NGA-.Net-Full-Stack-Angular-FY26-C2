@model OnlineBookstoreMVC.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>

<p>Thank you! Your order has been placed successfully.</p>

<p><strong>Order ID:</strong> @Model.Id</p>
<p><strong>Date:</strong> @Model.OrderDate.ToString("g")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

<a class="btn btn-primary" asp-controller="Books" asp-action="Index">Continue Shopping</a>
<a class="btn btn-secondary" asp-action="History">View My Orders</a>
