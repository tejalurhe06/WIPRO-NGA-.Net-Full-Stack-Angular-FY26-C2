<h2>Orders</h2>
@if(TempData["Message"] != null)
{
    <p style="color:green">@TempData["Message"]</p>
}

<table border="1">
    <tr>
        <th>Order ID</th>
        <th>Product ID</th>
        <th>User ID</th>
        <th>Order Date</th>
    </tr>
    @foreach(var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.ProductId</td>
            <td>@order.UserId</td>
            <td>@order.OrderDate</td>
        </tr>
    }
</table>
