@model Ecommerce_Website.Models.Order

<h2 class="my-4 text-center">Order Summary</h2>
<p><strong>User:</strong> @Model.Username</p>

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>Rs. @(item.Product?.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="text-end me-5">Total: Rs.@Model.TotalAmount</h4>
<a href="/Order/Bill" class="btn btn-primary mt-3">View Bill</a>
