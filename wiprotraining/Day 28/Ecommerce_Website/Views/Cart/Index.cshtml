@model List<Ecommerce_Website.Models.CartItem>

<h2 class="my-4 text-center">Your Cart</h2>

@if (!Model.Any())
{
    <p class="text-center">No items in cart</p>
    <a href="/Home/Index" class="btn btn-primary">Shop Products</a>
}
else
{
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>
                        <form method="get" action="/Cart/Update" class="d-flex justify-content-center">
                            <input type="hidden" name="id" value="@item.Product?.Id" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control w-50 me-2" />
                            <button type="submit" class="btn btn-info">Update</button>
                        </form>
                    </td>
                    <td>Rs. @(item.Product?.Price * item.Quantity)</td>
                    <td><a href="/Cart/Remove/@item.Product?.Id" class="btn btn-danger">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-end me-5">Total: Rs.@Model.Sum(i => i.Product!.Price * i.Quantity)</h4>
    <div class="d-flex justify-content-between mt-3">
        <a href="/Home/Index" class="btn btn-secondary">Continue Shopping</a>
        <a href="/Order/PlaceOrder" class="btn btn-success">Place Order</a>
    </div>
}
